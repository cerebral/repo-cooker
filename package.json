{
  "name": "repo-cooker",
  "version": "0.0.1",
  "description": "",
  "bin": "bin/index.js",
  "scripts": {
    "start": "babel-watch src/index.js --watch src",
    "build": "cross-env BABEL_ENV=production babel src/ --out-dir=lib/ -s",
    "commit": "git-cz",
    "format": "npm run lint -- --fix",
    "lint": "eslint \"**/*.js\"",
    "prepublish": "npm run build",
    "pretest": "test -e test/repo || git clone git@github.com:cerebral/repo-cooker-test.git test/repo",
    "test": "mocha --compilers js:babel-register \"src/**/*.test.js\" \"test/**/*.test.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerebral/repo-cooker.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cerebral/repo-cooker/issues"
  },
  "homepage": "https://github.com/cerebral/repo-cooker#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.1",
    "cz-customizable": "^5.0.0",
    "cz-customizable-ghooks": "^1.5.0",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.1",
    "mocha": "^3.4.2",
    "prettier": "^1.5.2"
  },
  "dependencies": {
    "function-tree": "^1.0.0-beta.3",
    "nodegit": "^0.18.3",
    "npm-registry-url": "^1.0.0",
    "request": "^2.81.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
}
