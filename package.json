{
  "name": "repo-cooker",
  "version": "0.0.0-next",
  "description": "",
  "main": "lib/index.js",
  "bin": "./lib/cli.js",
  "scripts": {
    "start": "babel-watch src/index.js --watch src",
    "build": "cross-env BABEL_ENV=production babel src/ --out-dir=lib/ -s",
    "commit": "git-cz",
    "coverage": "nyc --reporter=lcov --reporter=json npm run test",
    "format": "npm run lint -- --fix",
    "lint": "eslint \"**/*.js\"",
    "prepublish": "npm run build",
    "pretest": "test -e test/repo || git clone https://github.com/cerebral/repo-cooker-test.git test/repo",
    "release": "babel-node ./scripts/release/index.js",
    "test": "mocha --compilers js:babel-register \"src/**/*.test.js\" \"test/integration/*.test.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerebral/repo-cooker.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cerebral/repo-cooker/issues"
  },
  "homepage": "https://github.com/cerebral/repo-cooker#readme",
  "nyc": {
    "exclude": [
      "node_modules",
      "lib",
      "test",
      "**/*.test.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.1",
    "cz-customizable": "^5.0.0",
    "cz-customizable-ghooks": "^1.5.0",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "prettier": "^1.7.0",
    "simple-mock": "^0.8.0"
  },
  "dependencies": {
    "function-tree": "^1.0.0-beta.3",
    "globby": "^6.1.0",
    "nodegit": "^0.20.3",
    "npm-registry-url": "^1.0.0",
    "registry-url": "^3.1.0",
    "request": "^2.81.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
}
