{
  "name": "repo-cooker",
  "version": "0.0.0-next",
  "description": "",
  "main": "lib/index.js",
  "bin": "./lib/cli.js",
  "scripts": {
    "start": "babel-watch src/index.js --watch src",
    "build": "cross-env BABEL_ENV=production babel src/ --out-dir=lib/ -s",
    "commit": "git-cz",
    "coverage": "nyc --reporter=lcov --reporter=json npm run test",
    "format": "npm run lint -- --fix",
    "lint": "eslint \"**/*.js\"",
    "prepare": "npm run build",
    "pretest": "babel-node test/utils/pretest.js",
    "release": "npm run build && node ./lib/cli.js --release",
    "test":
      "mocha --require babel-register \"src/**/*.test.js\" \"test/integration/*.test.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerebral/repo-cooker.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cerebral/repo-cooker/issues"
  },
  "homepage": "https://github.com/cerebral/repo-cooker#readme",
  "nyc": {
    "exclude": ["node_modules", "lib", "test", "**/*.test.js"]
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^3.1.1",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.1",
    "cz-customizable": "^5.0.0",
    "cz-customizable-ghooks": "^1.5.0",
    "eslint": "^4.1.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "foo": "1.0.0",
    "husky": "^0.14.1",
    "mocha": "^5.2.0",
    "nyc": "^11.0.3",
    "prettier": "^1.7.0",
    "simple-mock": "^0.8.0"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "function-tree": "^3.2.2",
    "globby": "^6.1.0",
    "md5": "^2.2.1",
    "npm-registry-url": "^1.0.0",
    "registry-url": "^3.1.0",
    "request": "^2.81.0",
    "symlink-dir": "^1.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
}
